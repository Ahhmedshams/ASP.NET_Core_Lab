@model IdentityUser

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Model.UserName</h1>
<hr />
<dl class="row">
    <dt class="col-sm-2">
        Name
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.UserName)
    </dd>
    <dt class="col-sm-2">
        Email
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Email)
    </dd>
    <dt class="col-sm-2">
        Image
    </dt>
    <dd class="col-sm-10">
        <a asp-route-image="@ViewBag.image" asp-action="GetImage"><img src="~/images/@ViewBag.image" width="300px" /></a>
    </dd>
</dl>