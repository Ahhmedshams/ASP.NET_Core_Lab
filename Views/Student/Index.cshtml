@model List<Student>
<a type="button" class="btn btn-primary" asp-action="Create">Create New Student</a>
<table class="table  table-striped">
    <thead class="thead-dark">
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Age</th>
            <th scope="col">Email</th>
            <th scope="col">Department</th>
            <th scope="col">Action</th>

        </tr>
    </thead>
    <tbody>
        @foreach (Student item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Age</td>
                <td>@item.Email</td>
                <td>@item.Department.Name</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" type="button" class="btn btn-info">Details</a>
                    |
                    <a asp-action="Edit" asp-route-id="@item.Id" type="button" class="btn btn-warning">Edit</a>
                    |
                    <a asp-action="Delete" asp-route-id="@item.Id" type="button" class="btn btn-danger">Delete</a>
                </td>

            </tr>
        }

    </tbody>
</table>


