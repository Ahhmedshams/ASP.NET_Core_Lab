@model Department

@{
    SelectList ExistedCoueses = new SelectList(Model.courses, "Id", "Name");
    SelectList NotExistedCoueses = new SelectList(ViewBag.NewCourses, "Id", "Name");

    
}
<div class="card">
    <h5 class="card-header">Department Details</h5>
    <div class="card-body">
        <h6 class="card-title">Department Name: @Model.Name</h6>
        <h6 class="card-title">Department ID: @Model.Id</h6>
        <h6 class="card-title">Department Capacity: @Model.Capacity</h6>

        
        <form action="Courses" method="post">

            <div class="col-12 row">
                <input type="hidden" asp-for="Id" />
                <div class="col-6">
                    <label for="">Existed Courses</label>
                    <select name="CoursesToRemove" asp-items="ExistedCoueses" class="form-control" multiple></select>
                </div>

                <div class="col-6">
                    <label for="">Not Existed Courses</label>
                    <select name="CoursesToAdd" asp-items="NotExistedCoueses" class="form-control" multiple></select>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
        <a asp-controller="Department" asp-action="Index" class="btn btn-danger">Back</a>


    </div>


</div>